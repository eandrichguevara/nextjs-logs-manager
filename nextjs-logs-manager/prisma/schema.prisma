datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  role     String   // Changed from UserRole enum to String
  logs     Log[]
}

model Log {
  id        Int      @id @default(autoincrement())
  timestamp DateTime
  level     String   // Changed from LogLevel enum to String
  service   String
  message   String
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}